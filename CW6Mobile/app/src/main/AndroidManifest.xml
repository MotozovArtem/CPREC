<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.rienel.cw6">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Cw6Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CW6Mobile"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.data.DataViewActivity"
            android:exported="false" />
        <activity
            android:name=".ui.data.offer.MainActivity"
            android:exported="false" />
        <activity
            android:name=".ui.statistic.StatisticActivity"
            android:exported="false" />
        <activity
            android:name="io.rienel.cw6.ui.data.client.ClientListActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>